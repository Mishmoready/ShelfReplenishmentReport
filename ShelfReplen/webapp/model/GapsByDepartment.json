{
	"_version": "1.33.0",
	"sap.app": {
		"id": "card.explorer.actions.chartActions",
		"type": "card",
		"title": "Sample of Chart Actions",
		"subTitle": "Sample of Chart Actions",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"tags": {
			"keywords": [
				"Analytical"
			]
		}
	},
	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "sap-icon://line-chart"
		}
	},
	"sap.card": {
		"type": "Analytical",
		"header": {
			"title": "Gaps By Department"
		},
		"content": {
			"chartType": "Donut",
			"chartProperties": {
				"legendGroup": {
					"layout": {
						"position": "top",
						"alignment": "right"
					}
				},
				"plotArea": {
					"dataLabel": {
						"visible": true
					}
				},
				"title": {
					"visible": false
				}
			},
			"data": {
				"json": {
					"milk": [
						{
							"id": "1",
							"storeName": "Bakery",
							"revenue": 200
						},
						{
							"id": "2",
							"storeName": "Chilled",
							"revenue": 25
						},
						{
							"id": "3",
							"storeName": "Frozen",
							"revenue": 10
						},						
						{
							"id": "4",
							"storeName": "Grocery",
							"revenue": 10
						},
						{
							"id": "5",
							"storeName": "Liquor",
							"revenue": 10
						},
						{
							"id": "6",
							"storeName": "Text",
							"revenue": 15
						}
					]
				},
				"path": "/milk"
			},
			"dimensions": [
				{
					"name": "Store Name",
					"value": "{storeName}"
				}
			],
			"measures": [
				{
					"name": "Revenue",
					"value": "{revenue}"
				}
			],
			"feeds": [
				{
					"type": "Dimension",
					"uid": "color",
					"values": [
						"Store Name"
					]
				},
				{
					"type": "Measure",
					"uid": "size",
					"values": [
						"Revenue"
					]
				}
			],
			"actionableArea": "Chart",
			"actions": [
				{
					"type": "Navigation",
					"parameters": {
						"url": "https://sap.com?id={id}&revenue={revenue}&storeName={storeName}"
					}
				}
			]
		}
	}
}